{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [],
    "steps": [
      {
        "name": "CustomerDets",
        "label": "Sign Up",
        "subLabel": {
          "preValidation": "Sign up for an Instaclustr Account",
          "postValidation": "Done"
        },
        "bladeTitle": "Sign Up",
        "elements": [
          {
            "name": "existingCustomer",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Are you an existing Customer?",
            "defaultValue": "New Customer",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Existing Customer",
                  "value": true
                },
                {
                  "label": "New Customer",
                  "value": false
                }
              ]
            }
          },
          {
            "name": "username",
            "type": "Microsoft.Common.TextBox",
            "label": "Instaclustr Username",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "password",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Instaclustr Password",
              "confirmPassword": "Confirm password"
            },
            "constraints": {
              "required": true
            },
            "options": {
              "hideConfirmation": "[steps('CustomerDets').existingCustomer]"
            }
          },
          {
            "name": "companyName",
            "type": "Microsoft.Common.TextBox",
            "label": "Company Name",
            "toolTip": "Company Name",
            "constraints": {
              "required": true,
              "regex": "^[a-zA-Z0-9]{1,80}$",
              "validationMessage": "1-80 alphanumeric"
            },
            "visible": true
          },
          {
            "name": "fullName",
            "type": "Microsoft.Common.TextBox",
            "label": "Full Name",
            "constraints": {
              "required": "[not(steps('CustomerDets').existingCustomer)]"
            },
            "visible": "[not(steps('CustomerDets').existingCustomer)]"
          },
          {
            "name": "email",
            "type": "Microsoft.Common.TextBox",
            "label": "E-mail Address",
            "constraints": {
              "required": "[not(steps('CustomerDets').existingCustomer)]"
            },
            "visible": "[not(steps('CustomerDets').existingCustomer)]"
          },
          {
            "name": "applianceName",
            "type": "Microsoft.Common.TextBox",
            "label": "Appliance Name",
            "toolTip": "Appliance Name",
            "constraints": {
              "required": true,
              "regex": "^[a-zA-Z0-9_.-]{1,80}$",
              "validationMessage": "1-80 alphanumeric, underscore, hyphen, an period (except at end)"
            }
          }
        ]
      }
    ],
    "outputs": {
      "existingCustomer": "[steps('CustomerDets').existingCustomer]",
      "username": "[steps('CustomerDets').username]",
      "password": "[steps('CustomerDets').password]",
      "companyName": "[steps('CustomerDets').companyName]",
      "fullName": "[steps('CustomerDets').fullName]",
      "email": "[steps('CustomerDets').email]",
      "applianceName": "[steps('CustomerDets').applianceName]"
    }
  }
}
