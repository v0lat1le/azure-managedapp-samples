{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {
        "storageAccountName": "[concat('icbackup', uniqueString(resourceGroup().id, deployment().name))]",
        "deployActionGroupName": "[concat('managed-app-deployed-', uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Insights/actionGroups",
            "apiVersion": "2017-04-01",
            "name": "[variables('deployActionGroupName')]",
            "location": "Global",
            "properties": {
                "groupShortName": "Azure Marketplace Deployment",
                "enabled": true,
                "smsReceivers": [
                ],
                "emailReceivers": [
                {
                    "name": "emailReceiver",
                    "emailAddress": ""
                }
                ],
                "webhookReceivers": [
                    {
                        "name": "Receiver",
                        "serviceUri": ""
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Insights/activityLogAlerts",
            "apiVersion": "2017-04-01",
            "name": "[concat('deployalert', uniqueString(resourceGroup().id))]",
            "location": "Global",
            "dependsOn": [
                "[variables('deployActionGroupName')]"
            ],
            "properties": {
                "enabled": true,
                "scopes": [
                    "[resourceGroup().id]"
                ],
                "condition": {
                    "allOf": [
                        {
                            "field": "category",
                            "equals": "Administrative"
                        },
                        {
                            "field": "operationName",
                            "equals": "Microsoft.Resources/deployments/write"
                        },
                        {
                            "field": "resourceType",
                            "equals": "Microsoft.Resources/deployments"
                        },
                        {
                            "field": "status",
                            "equals": "Succeeded"
                        }
                    ]
                },
                "actions": {
                    "actionGroups": [
                        {
                            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', variables('deployActionGroupName'))]",
                            "webhookProperties": {
                                "test": "value"
                            }
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2016-01-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "properties": {}
        }
    ],
    "outputs": {}
}
