{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "existingCustomer": {
            "type": "bool"
        },
        "username": {
            "type": "string"
        },
        "password": {
            "type": "securestring"
        },
        "companyName": {
            "type": "string"
        },
        "fullName": {
            "type": "string",
            "defaultValue": ""
        },
        "email": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "storageAccountName": "[concat('icbackup', uniqueString(resourceGroup().id, deployment().name))]",
        "deployActionGroupName": "[concat('actndeployok', uniqueString(resourceGroup().id))]",
        "deployActivityAlertName": "[concat('alrtdeployok', uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Insights/actionGroups",
            "apiVersion": "2017-04-01",
            "name": "[variables('deployActionGroupName')]",
            "location": "Global",
            "properties": {
                "groupShortName": "AzureManaged",
                "enabled": true,
                "smsReceivers": [
                ],
                "emailReceivers": [
                    {
                        "name": "emailReceiver",
                        "emailAddress": ""
                    }
                ],
                "webhookReceivers": [
                    {
                        "name": "webhookReceiver",
                        "serviceUri": ""
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Insights/activityLogAlerts",
            "apiVersion": "2017-04-01",
            "name": "[variables('deployActivityAlertName')]",
            "location": "Global",
            "dependsOn": [
                "[variables('deployActionGroupName')]"
            ],
            "properties": {
                "enabled": true,
                "scopes": [
                    "[resourceId('Microsoft.Resources/deployments', deployment().name)]"
                ],
                "condition": {
                    "allOf": [
                        {
                            "field": "category",
                            "equals": "Administrative"
                        },
                        {
                            "field": "operationName",
                            "equals": "Microsoft.Resources/deployments/write"
                        },
                        {
                            "field": "resourceType",
                            "equals": "Microsoft.Resources/deployments"
                        },
                        {
                            "field": "status",
                            "equals": "Succeeded"
                        }
                    ]
                },
                "actions": {
                    "actionGroups": [
                        {
                            "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', variables('deployActionGroupName'))]",
                            "webhookProperties": {
                                "existingCustomer": "[parameters('existingCustomer')]",
                                "username": "[parameters('username')]",
                                "password": "[parameters('password')]",
                                "companyName": "[parameters('companyName')]",
                                "fullName": "[parameters('fullName')]",
                                "email": "[parameters('email')]",
                                "managedByResourceGroupName": "[resourceGroup().name]"
                            }
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2016-01-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "properties": {}
        }
    ],
    "outputs": {}
}
